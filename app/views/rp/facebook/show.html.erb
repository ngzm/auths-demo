<main>
<h1>Show Your Profile</h1>
<div>
  <h3>Identity Provider: Facebook</h3>

  <table>
    <tr><th>Facebook id</th><td><%= @profile['id'] %></td></tr>
    <tr><th>name</th><td><%= @profile['name'] %></td></tr>
    <tr><th>first name</th><td><%= @profile['first_name'] %></td></tr>
    <tr>
      <th>photo</th>
      <td><%= image_tag @profile['picture']['data']['url'], alt: 'photo', width: '80px', height: '80px' %></td>
    </tr>
    <tr><th>email</th><td><%= @profile['email'] %></td></tr>
  </table>
</div>
<p>
[<%= link_to 'Main View に戻る', main_index_path %>]
[<%= link_to 'ログアウトする', main_logout_path %>]
</p>
</main>
